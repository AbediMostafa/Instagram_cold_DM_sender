{
  "extends": "@vue/tsconfig/tsconfig.web.json",
  "exclude": ["env.d.ts", "src/**/*", "src/**/*.vue"],
  "compilerOptions": {
    "noEmitOnError": false,
    "skipLibCheck": true,
    "lib": ["es2017"],
    "ignoreDeprecations": "5.0",
    "noImplicitAny": false,
    "baseUrl": ".",
    "paths": {
      "@/*": ["./src/*"]
    }
  },
  "references": [
    {
      "path": "./tsconfig.config.json"
    }
  ]
}
